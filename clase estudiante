class Estudiante:
    def __init__(self, nombre, edad):
        self.__nombre = nombre
        self.__edad = edad
        self.__notas = []  

    def agregar_nota(self, nota):
        if 0 <= nota <= 10:
            self.__notas.append(nota)

    def promedio(self):
        if len(self.__notas) == 0:
            return 0
        return sum(self.__notas) / len(self.__notas)

    def info(self):
        return f"Estudiante {self.__nombre}, edad {self.__edad}, notas {self.__notas}"



    
