class Persona:
    def __init__(self, nombre, edad, genreo):
        self.__nombre = nombre
        self.__edad = edad
        self.__genreo = genreo

    # Getter y Setter
    def get_edad(self):
        return self.__edad

    def set_edad(self, nueva_edad):
        if nueva_edad >= 0:
            self.__edad = nueva_edad

    def mostrar_info(self):
        return f"Persona: {self.__nombre}, {self.__edad} aÃ±os, genreo: {self.__genreo}"
